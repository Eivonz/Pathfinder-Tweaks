{
    "manifest_version": 3,
    "name": "Pathfinder Tweaks",
    "version": "1.2",
    "description": "Fixes various clientside Pathfinder issues",
    "homepage_url": "https://github.com/Eivonz/Pathfinder-Tweaks",
    "author": "Eibon",
    
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "storage",
        
        "webRequest",
        "webRequestFilterResponse",
        "webRequestBlocking"
    ],

    "background": {
        "scripts": ["pft-bg.js"]
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "pft.js"
        ]
      }
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "btpft@eibon.net"
        }
    }

  }
  
